<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Please Fill the required fields"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_label"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/name_input"
        android:layout_width="284dp"
        android:layout_height="35dp"
        android:hint="Enter name here"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/email_input"
        android:layout_width="284dp"
        android:layout_height="29dp"
        android:hint="Enter Email"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="68dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:text="Phone Number"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/input_phone"
        android:layout_width="282dp"
        android:layout_height="32dp"
        android:hint="(000) 123-4567"
        android:inputType="textUri|phone"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="155dp" />

    <Button
        android:id="@+id/pay_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="284dp" />

    <TextView
        android:id="@+id/amount_to_donate"
        android:layout_width="72dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:text="Amount to Donate"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="208dp" />

</android.support.constraint.ConstraintLayout>